package com.app.Weather.config;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import javax.servlet.ServletContext;
import javax.servlet.ServletException;
import org.springframework.boot.web.servlet.context.ServletWebServerApplicationContext;
import org.springframework.context.ApplicationContext;

@Configuration
public class WebConfig {

    @Bean
    public ServletContext servletContext(ApplicationContext applicationContext) throws ServletException {
        return ((ServletWebServerApplicationContext) applicationContext).getServletContext();
    }
}
